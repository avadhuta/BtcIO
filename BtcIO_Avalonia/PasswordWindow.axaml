<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        x:Class="BtcIO_Avalonia.PasswordWindow"
        Title="PasswordWindow" Height="125" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="328*"/>
            <ColumnDefinition Width="35*"/>
        </Grid.ColumnDefinitions>
        <TextBox PasswordChar="*" x:Name="pTb" Height="23"  VerticalAlignment="Top" Grid.Column="1" Margin="0,30,0,0"/>
        <Label Content="Password:" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,3,0,0"/>
        <Button x:Name="OkBtn" Click="Button_Ok_Click" Content="Ok" Grid.Column="1" HorizontalAlignment="Right" Margin="253,70,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
